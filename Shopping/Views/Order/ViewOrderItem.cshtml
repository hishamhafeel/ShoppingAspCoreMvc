@model UpdateOrderItemViewModel
@{
    ViewData["Title"] = "ViewOrderItem";
}

<h1>Order Item Details</h1>

<form asp-controller="Order" asp-action="UpdateOrderItem">
    <input asp-for="ProductId" hidden />
    <span asp-validation-for="Quantity" class="text-danger"></span>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="Order.OrderId"></label>
            <input id="OrderId" class="form-control" asp-for="Order.OrderId" readonly>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Id"></label>
            <input id="OrderItemId" class="form-control" asp-for="Id" readonly>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="UnitPrice"></label>
            <input id="UnitPrice" class="form-control" asp-for="UnitPrice" readonly>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Quantity"></label>
            <input id="Quantity" class="form-control" asp-for="Quantity" max="10" min="1">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="SubTotal"></label>
            <input id="SubTotal" class="form-control" asp-for="SubTotal" readonly>
        </div>
    </div>
    <div class="form-row">
        <input type="submit" name="SaveOrderItem" value="Update" class="btn btn-info" />
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}